<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_1"
    android:orientation="vertical"
    tools:context=".AllActivity.PublishPost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pBack"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/border_1"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/titles"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="@string/publish"
            android:textColor="#222222"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/publish"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="2"
            android:maxWidth="@dimen/_70sdp"
            android:text="@string/up" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageProfile"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/border1"
            android:maxWidth="@dimen/_60sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/Post_name"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="20">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/Post_Contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_1"
                        android:focusable="true"
                        android:gravity="start"
                        android:hint="@string/What"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minHeight="@dimen/_20sdp"
                        android:padding="10dp"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:id="@+id/aloneImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border5"
                        android:padding="@dimen/_1sdp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/_100sdp"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/doubleImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border5"
                            android:padding="@dimen/_1sdp">

                            <ImageView
                                android:id="@+id/b1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border5"
                            android:padding="@dimen/_1sdp">

                            <ImageView
                                android:id="@+id/b2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/moreThan3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginRight="@dimen/_1sdp"
                            android:layout_weight="3"
                            android:background="@drawable/border5"
                            android:padding="@dimen/_1sdp">

                            <ImageView
                                android:id="@+id/c1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_1sdp"
                                android:scaleType="centerCrop" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_99sdp"
                                android:background="@drawable/border5"
                                android:padding="@dimen/_1sdp">

                                <ImageView
                                    android:id="@+id/c2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />
                            </LinearLayout>


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_99sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/border5"
                                android:padding="@dimen/_1sdp">

                                <ImageView
                                    android:id="@+id/c3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.333"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/img_more"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#70BDBDBD"
                                    android:gravity="center"
                                    android:scaleType="centerCrop"
                                    android:text="+1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp"
                                    app:layout_constraintBottom_toBottomOf="@+id/c3"
                                    app:layout_constraintEnd_toEndOf="@+id/c3"
                                    app:layout_constraintStart_toStartOf="@+id/c3"
                                    app:layout_constraintTop_toTopOf="@+id/c3" />
                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/saloneImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border5"
                        android:padding="@dimen/_1sdp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/sa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/_100sdp"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sdoubleImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border5"
                            android:padding="@dimen/_1sdp">

                            <ImageView
                                android:id="@+id/sb1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_weight="1"
                            android:background="@drawable/border5"
                            android:padding="@dimen/_1sdp">

                            <ImageView
                                android:id="@+id/sb2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/smoreThan3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginRight="@dimen/_1sdp"
                            android:layout_weight="3"
                            android:background="@drawable/border5"
                            android:padding="@dimen/_1sdp">

                            <ImageView
                                android:id="@+id/sc1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_1sdp"
                                android:scaleType="centerCrop" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_99sdp"
                                android:background="@drawable/border5"
                                android:padding="@dimen/_1sdp">

                                <ImageView
                                    android:id="@+id/sc2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />
                            </LinearLayout>


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_99sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/border5"
                                android:padding="@dimen/_1sdp">

                                <ImageView
                                    android:id="@+id/sc3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.333"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/simg_more"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#70BDBDBD"
                                    android:gravity="center"
                                    android:scaleType="centerCrop"
                                    android:text="+1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp"
                                    app:layout_constraintBottom_toBottomOf="@+id/sc3"
                                    app:layout_constraintEnd_toEndOf="@+id/sc3"
                                    app:layout_constraintStart_toStartOf="@+id/sc3"
                                    app:layout_constraintTop_toTopOf="@+id/sc3" />
                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/grey" />


        <LinearLayout
            android:id="@+id/Post_GetCamera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/camera" />

            <TextView
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:text="@string/camera"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/publish_getCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/pin" />

            <TextView
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:text="@string/Checkin"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>